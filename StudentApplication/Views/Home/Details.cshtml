@model StudentApplication.Models.Student

    <div class="container details-container">
        <h1>Student Details</h1>
        <div>
            <h2>@Model.Name @Model.Surname</h2>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Department:</strong> @Model.Department</p>
            <p><strong>Class:</strong> @Model.Class</p>
            <h3>Grades</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Course Name</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grade in Model.Grades)
                    {
                        <tr>
                            <td>@grade.CourseName</td>
                            <td>@grade.Score</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <p>
            <a href="/Home/Edit/@Model.Id" class="btn">Edit</a>
            <a href="/Home/Index" class="btn btn-secondary">Back to List</a>
        </p>
    </div>