@model StudentApplication.Models.Student

<h1>Student Details</h1>
<div>
    <h2>@Model.Name @Model.Surname</h2>
    <p><strong>Faculty:</strong> @Model.Faculty</p>
    <p><strong>Department:</strong> @Model.Department</p>
    <p><strong>Student Number:</strong> @Model.StudentNumber</p>
    <p><strong>GPA:</strong> @Model.GPA</p>
    <h3>Grades</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model.Grades)
            {
                <tr>
                    <td>@grade.CourseName</td>
                    <td>@grade.Score</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>
    <a asp-action="Edit" asp-controller="Student" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a href="/Home/Index" class="btn btn-secondary">Back to List</a>
</p>
